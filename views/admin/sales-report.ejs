<%- include("../../views/partials/admin/header") %>

<!DOCTYPE html>
<html>
<head>
  <title>Sales Report</title>
  <style>
    .sales-report-container {
      font-family: Arial, sans-serif;
      padding: 20px;
    }

    .sales-report-container h1,
    .sales-report-container h2 {
      color: #333;
    }

    .sales-report-form {
      margin-bottom: 20px;
    }

    .sales-report-form select,
    .sales-report-form input[type="date"],
    .sales-report-form button {
      padding: 8px;
      margin-right: 10px;
      font-size: 14px;
    }

    .sales-summary {
      list-style: none;
      padding: 15px;
      background: #f7f7f7;
      border-radius: 8px;
      margin-bottom: 20px;
    }

    .sales-summary li {
      margin-bottom: 5px;
      font-size: 16px;
    }

    .sales-report-links a {
      display: inline-block;
      margin-right: 10px;
      padding: 8px 12px;
      background: #4CAF50;
      color: white;
      text-decoration: none;
      border-radius: 5px;
    }

    .sales-report-links a:hover {
      background: #45a049;
    }

    .sales-table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 10px;
    }

    .sales-table th,
    .sales-table td {
      padding: 10px;
      text-align: left;
      border-bottom: 1px solid #ccc;
    }

    .sales-table th {
      background-color: #f0f0f0;
    }

    .sales-table tr:hover {
      background-color: #f9f9f9;
    }

    .pagination {
      margin-top: 20px;
    }

    .pagination a {
      padding: 6px 12px;
      margin: 0 4px;
      border-radius: 4px;
      text-decoration: none;
      background: #eee;
      color: #333;
    }

    .pagination a.active {
      background-color: #4CAF50;
      color: white;
    }

    .pagination a:hover {
      background-color: #ddd;
    }
  </style>
  <script>
    function toggleDateInputs() {
      const sel = document.querySelector('select[name="range"]');
      document.getElementById('custom-dates').style.display =
        sel.value === 'custom' ? 'inline' : 'none';
    }
    window.onload = toggleDateInputs;
  </script>
</head>
<body>
<div class="sales-report-container">
  <h1>Sales Report</h1>

  <form class="sales-report-form" method="GET" action="/admin/sales" oninput="toggleDateInputs()">
    <select name="range" onchange="toggleDateInputs()">
      <option value="daily" <%= range==='daily'?'selected':''%>>Daily</option>
      <option value="weekly" <%= range==='weekly'?'selected':''%>>Weekly</option>
      <option value="monthly" <%= range==='monthly'?'selected':''%>>Monthly</option>
      <option value="custom" <%= range==='custom'?'selected':''%>>Custom</option>
    </select>
    <span id="custom-dates" style="display:none;">
      <input type="date" name="from" value="<%= from || '' %>" />
      <input type="date" name="to" value="<%= to || '' %>" />
    </span>
    <button type="submit">Filter</button>
  </form>

  <h2>Summary</h2>
  <ul class="sales-summary">
    <li>Total Orders: <%= report.totalOrders %></li>
    <li>Total Amount: ₹<%= report.totalAmount %></li>
    <li>Total Discount: ₹<%= report.totalDiscount %></li>
    <li>Final Amount: ₹<%= report.totalFinalAmount %></li>
  </ul>

  <div class="sales-report-links">
    <a href="/admin/download-sales-report?type=pdf&range=<%= range %>&from=<%= from %>&to=<%= to %>">Download PDF</a>
    <a href="/admin/download-sales-report?type=excel&range=<%= range %>&from=<%= from %>&to=<%= to %>">Download Excel</a>
  </div>

  <h2>Order List</h2>
  <table class="sales-table">
    <thead>
      <tr>
        <th>Order ID</th>
        <th>Total</th>
        <th>Discount</th>
        <th>Final</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
      <% orders.forEach(order => { %>
        <tr>
          <td><%= order.orderId %></td>
          <td>₹<%= order.totalPrice.toFixed(2) %></td>
          <td>₹<%= order.discount.toFixed(2) %></td>
          <td>₹<%= order.finalAmount.toFixed(2) %></td>
          <td><%= new Date(order.createdOn).toLocaleDateString() %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <% if (totalPages > 1) { %>
    <div class="pagination">
      <% for (let i = 1; i <= totalPages; i++) { %>
        <a 
          href="?range=<%= range %>&from=<%= from %>&to=<%= to %>&page=<%= i %>&limit=10" 
          class="<%= i === currentPage ? 'active' : '' %>">
          <%= i %>
        </a>
      <% } %>
    </div>
  <% } %>
</div>
</body>
</html>

<%- include("../../views/partials/admin/footer") %>
