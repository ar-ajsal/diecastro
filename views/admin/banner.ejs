<%- include("../../views/partials/admin/header") %>

<div class="content-header row">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="content-title card-title">Banners</h2>
    </div>
</div>

<div class="right mt-5">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Image</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Active</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            <% if (data.length > 0) { %>
                <% data.forEach(banner => { %>
                    <tr>
                        <td>
                            <img src="/uploads/<%= banner.image %>" style="height: 2rem; width: 3rem;" class="img-xs" alt="Banner Image">
                        </td>
                        <td><%= banner.title %></td>
                        <td><%= banner.description %></td>
                        <td>
                            <% const now = new Date(); %>
                            <% if (banner.startDate <= now && banner.endDate >= now) { %>
                                <p class="badge rounded-pill alert-success">Active</p>
                            <% } else { %>
                                <p class="badge rounded-pill alert-danger">Not Active</p>
                            <% } %>
                        </td>
                        <td class="action" data-title="Remove">
                            <a href="/banner/delete/<%= banner._id %>" onclick="return confirm('Are you sure you want to delete this banner?');">
                                <i class="icon material-icons md-delete"></i>
                            </a>
                        </td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="5" class="text-center">No banners found.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <a href="/admin/banner/add">
                <button class="btn btn-primary mt-3" type="button">Add Banner</button>
            </a>
        </div>
    </div>
</div>

<%- include("../../views/partials/admin/footer") %>
