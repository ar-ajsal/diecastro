<%- include("../../views/partials/admin/header") %>
<head>
    <style>
        :root {
            --primary-color: #0a0f2b; /* Deep cosmic blue */
            --secondary-color: #1e2a5e; /* Darker gradient shade */
            --accent-color: #ff007a; /* Neon pink for legendary flair */
            --text-color: #e0e7ff; /* Soft white with a glow */
            --hover-color: #ff4da6; /* Brighter neon pink */
            --glow-color: rgba(255, 0, 122, 0.5); /* Glowing effect */
            --background-gradient: linear-gradient(135deg, #0a0f2b 0%, #1e2a5e 100%);
            --success-color: #00cc99; /* Vibrant green */
            --danger-color: #ff4d4d; /* Vibrant red */
            --info-color: #00b7eb; /* Bright cyan */
            --light-gray: rgba(236, 240, 241, 0.1); /* Subtle glassmorphism gray */
        }

        body {
            background: var(--background-gradient);
            font-family: 'Montserrat', sans-serif;
            color: var(--text-color);
            min-height: 100vh;
        }

        .container {
            padding: 3rem 2rem;
        }

        .form-container {
            background: rgba(30, 42, 94, 0.9);
            border-radius: 10px;
            padding: 2rem;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            transition: all 0.3s ease;
            max-width: 600px;
            margin: 0 auto;
        }

        .form-container:hover {
            box-shadow: 0 8px 32px var(--glow-color);
            transform: translateY(-5px);
        }

        .form-label {
            font-weight: 600;
            font-size: 1.1rem;
            color: var(--text-color);
            margin-bottom: 0.5rem;
            text-shadow: 0 0 5px var(--glow-color);
        }

        .form-control {
            width: 100%;
            padding: 0.75rem;
            font-size: 1rem;
            border-radius: 8px;
            border: 1px solid var(--accent-color);
            background: rgba(255, 255, 255, 0.1);
            color: var(--text-color);
            transition: all 0.3s ease;
        }

        .form-control:focus {
            outline: none;
            box-shadow: 0 0 10px var(--glow-color);
            background: rgba(255, 255, 255, 0.2);
            border-color: var(--hover-color);
        }

        .btn-primary {
            background: var(--accent-color);
            color: var(--text-color);
            padding: 0.75rem 1.5rem;
            font-size: 1.125rem;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-family: 'Montserrat', sans-serif;
        }

        .btn-primary:hover {
            background: var(--hover-color);
            transform: scale(1.05);
            box-shadow: 0 0 10px var(--glow-color);
        }

        .d-grid.text-end {
            display: flex;
            justify-content: flex-end;
            margin-top: 2rem;
        }

        .mb-4 {
            margin-bottom: 1.5rem;
        }

        @media screen and (max-width: 768px) {
            .container {
                padding: 2rem 1rem;
            }

            .form-container {
                padding: 1.5rem;
            }
        }
    </style>
</head>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" action="/admin/editCategory/<%=category._id%>" class="form-container">
                <div class="d-grid text-end">
                    <button class="btn btn-primary" type="submit">Update Category</button>
                </div>
                <div class="mb-4">
                    <label for="category_name" class="form-label">Name</label>
                    <input type="text" name="name" value="<%=category.name%>" class="form-control" id="category_name" />
                </div>
                
                <div class="mb-4">
                    <label class="form-label">Description</label>
                    <textarea name="description" class="form-control"><%=category.description%></textarea>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include("../../views/partials/admin/footer") %>