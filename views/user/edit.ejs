<%- include("../../views/partials/user/header") %>  

<div class="ps-container">
  <h2>Edit Blog Post</h2>
  <form action="/blogs/edit/<%= blog._id %>" method="POST" enctype="multipart/form-data">
    <div>
      <label>Title:</label>
      <input type="text" name="title" value="<%= blog.title %>" required>
    </div>
    <div>
      <label>Author:</label>
      <input type="text" name="author" value="<%= blog.author %>">
    </div>
    <div>
      <label>Content:</label>
      <textarea name="content" rows="10" required><%= blog.content %></textarea>
    </div>
    <div>
      <label>Current Thumbnail:</label>
      <img src="/images/<%= blog.thumbnail %>" alt="Current Thumbnail" width="100">
    </div>
    <div>
      <label>Change Thumbnail:</label>
      <input type="file" name="thumbnail">
    </div>
    <button type="submit">Update</button>
  </form>
</div>
<%- include("../../views/partials/user/footer") %>
