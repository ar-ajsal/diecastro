                                <div class="ps-shoe__thumbnail">
                                    <% if (products[i].isNew) { %>
                                        <div class="ps-badge"><span>New</span></div>
                                    <% } %>
                                    <% if (products[i].salePrice < products[i].regularPrice) { %>
                                        <!-- <div class="ps-badge ps-badge--sale ps-badge--2nd"><span>-<%= Math.round(((products[i].regularPrice - products[i].salePrice) / products[i].regularPrice) * 100) %>%</span></div> -->
                                    <% } %>
