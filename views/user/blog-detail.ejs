  <!-- Custom CSS -->
  <style>
    :root {
      --primary-color: #2AC37D;
      --secondary-color: #1E9C5F;
      --text-color: #333;
      --bg-color: #f8f9fa;
      --dark-bg: #1D1F2C;
      --dark-text: #e0e0e0;
      --transition: all 0.3s ease;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Poppins', sans-serif;
      color: var(--text-color);
      background: var(--bg-color);
      transition: var(--transition);
    }

    body.dark-mode {
      background: var(--dark-bg);
      color: var(--dark-text);
    }

    /* Header Styles */
    .header {
      position: sticky;
      top: 0;
      z-index: 1000;
      background: #fff;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .header__top {
      background: var(--primary-color);
      color: #fff;
      padding: 10px 0;
    }

    .header__top .container {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .header__actions {
      display: flex;
      align-items: center;
      gap: 15px;
    }

    .dropdown {
      position: relative;
    }

    .dropdown-content {
      display: none;
      position: absolute;
      right: 0;
      background: #fff;
      min-width: 160px;
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
      border-radius: 8px;
      z-index: 1000;
    }

    .dropdown-content a {
      color: var(--text-color);
      padding: 12px 16px;
      text-decoration: none;
      display: block;
      transition: var(--transition);
    }

    .dropdown-content a:hover {
      background: var(--primary-color);
      color: #fff;
    }

    .dropdown:hover .dropdown-content {
      display: block;
    }

    .nav-icon {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      width: 40px;
      height: 40px;
      border-radius: 50%;
      background: #f1f3f5;
      color: var(--text-color);
      transition: var(--transition);
    }

    .nav-icon:hover {
      background: var(--primary-color);
      color: #fff;
      transform: scale(1.1);
    }

    .nav-icon__badge {
      position: absolute;
      top: -8px;
      right: -8px;
      background: #ff4d4f;
      color: #fff;
      border-radius: 50%;
      width: 18px;
      height: 18px;
      font-size: 12px;
      line-height: 18px;
      text-align: center;
    }

    .navigation {
      background: #fff;
      padding: 15px 0;
    }

    .navigation__column.center {
      text-align: center;
    }

    .main-menu {
      list-style: none;
      display: flex;
      justify-content: center;
      gap: 30px;
    }

    .main-menu li a {
      color: var(--text-color);
      text-decoration: none;
      font-weight: 500;
      font-size: 16px;
      transition: var(--transition);
    }

    .main-menu li a:hover {
      color: var(--primary-color);
    }

    .sub-menu {
      display: none;
      position: absolute;
      background: #fff;
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
      border-radius: 8px;
      min-width: 160px;
    }

    .menu-item-has-children:hover .sub-menu {
      display: block;
    }

    .sub-menu li a {
      padding: 10px 15px;
      display: block;
    }

    /* Theme Switcher */
    .theme-switch {
      --toggle-size: 10px;
      --container-width: 5em;
      --container-height: 2.2em;
      --container-radius: 6em;
      --sun-bg: #ECCA2F;
      --moon-bg: #C4C9D1;
      --container-light-bg: #3D7EAE;
      --container-night-bg: #1D1F2C;
    }

    .theme-switch__container {
      width: var(--container-width);
      height: var(--container-height);
      background: var(--container-light-bg);
      border-radius: var(--container-radius);
      cursor: pointer;
      transition: var(--transition);
      position: relative;
      overflow: hidden;
    }

    .theme-switch__checkbox:checked + .theme-switch__container {
      background: var(--container-night-bg);
    }

    .theme-switch__circle-container {
      width: 2.5em;
      height: 2.5em;
      background: rgba(255, 255, 255, 0.1);
      border-radius: 50%;
      position: absolute;
      left: 0.2em;
      top: 0.2em;
      transition: var(--transition);
    }

    .theme-switch__checkbox:checked + .theme-switch__container .theme-switch__circle-container {
      left: calc(100% - 2.7em);
    }

    .theme-switch__sun-moon-container {
      width: 1.8em;
      height: 1.8em;
      margin: auto;
      background: var(--sun-bg);
      border-radius: 50%;
      transition: var(--transition);
    }

    .theme-switch__checkbox:checked + .theme-switch__container .theme-switch__moon {
      transform: translate(0);
    }

    /* Blog Styles */
    .ps-blog-grid {
      padding: 60px 0;
    }

    .ps-post__thumbnail img {
      width: 100%;
      border-radius: 12px;
      border: 3px solid var(--primary-color);
      object-fit: cover;
    }

    .ps-post__header h3 {
      font-size: 32px;
      color: var(--primary-color);
      margin-bottom: 15px;
    }

    .ps-post__meta a {
      color: var(--primary-color);
      text-decoration: none;
    }

    .ps-post__meta a:hover {
      text-decoration: underline;
    }

    .ps-post__content {
      font-size: 16px;
      line-height: 1.8;
      margin-bottom: 30px;
    }

    .ps-post__tags a {
      border: 1px solid var(--primary-color);
      padding: 5px 12px;
      border-radius: 20px;
      color: var(--primary-color);
      text-decoration: none;
      transition: var(--transition);
    }

    .ps-post__tags a:hover {
      background: var(--primary-color);
      color: #fff;
    }

    .ps-btn {
      background: var(--primary-color);
      color: #fff;
      border: none;
      padding: 10px 20px;
      border-radius: 25px;
      font-size: 14px;
      transition: var(--transition);
    }

    .ps-btn:hover {
      background: var(--secondary-color);
      transform: translateY(-2px);
    }

    .ps-author {
      display: flex;
      align-items: center;
      padding: 20px;
      background: #f0faf5;
      border-radius: 12px;
      margin: 30px 0;
    }

    .ps-author__thumbnail img {
      width: 80px;
      height: 80px;
      border-radius: 50%;
      border: 2px solid var(--primary-color);
    }

    .ps-comment__list li {
      padding: 15px;
      border-left: 3px solid var(--primary-color);
      background: #fff;
      border-radius: 8px;
      margin-bottom: 20px;
    }

    .ps-form--comment {
      background: #f0faf5;
      padding: 20px;
      border-radius: 12px;
      border: 1px solid var(--primary-color);
    }

    .ps-form--comment .form-control {
      border: 1px solid var(--primary-color);
      border-radius: 8px;
      padding: 10px;
      transition: var(--transition);
    }

    .ps-form--comment .form-control:focus {
      border-color: var(--secondary-color);
      box-shadow: 0 0 5px rgba(42, 195, 125, 0.3);
    }

    /* Footer Styles */
    .ps-footer {
      background: linear-gradient(135deg, #1D1F2C, #2A2F3F);
      color: #fff;
      padding: 60px 0 20px;
    }

    .ps-footer__content .ps-widget__title {
      color: var(--primary-color);
      font-size: 20px;
      margin-bottom: 20px;
    }

    .ps-footer__content a {
      color: #fff;
      text-decoration: none;
      transition: var(--transition);
    }

    .ps-footer__content a:hover {
      color: var(--primary-color);
    }

    .butto {
      background: transparent;
      border: none;
      font-size: 24px;
      color: #fff;
      position: relative;
      text-transform: uppercase;
      cursor: pointer;
    }

    .hover-text {
      position: absolute;
      top: 0;
      left: 0;
      width: 0;
      color: var(--primary-color);
      overflow: hidden;
      transition: width 0.5s;
    }

    .butto:hover .hover-text {
      width: 100%;
    }

    /* Music Player */
    #music-toggle {
      position: fixed;
      bottom: 20px;
      right: 20px;
      background: var(--primary-color);
      color: #fff;
      border: none;
      padding: 12px 18px;
      border-radius: 50px;
      cursor: pointer;
      z-index: 9999;
      transition: var(--transition);
    }

    #music-toggle:hover {
      background: var(--secondary-color);
      transform: scale(1.1);
    }

    /* Dark Mode Adjustments */
    body.dark-mode .header,
    body.dark-mode .navigation,
    body.dark-mode .ps-post--detail,
    body.dark-mode .ps-widget--sidebar {
      background: #2A2F3F;
      color: var(--dark-text);
    }

    body.dark-mode .ps-post__thumbnail img,
    body.dark-mode .ps-author,
    body.dark-mode .ps-form--comment,
    body.dark-mode .ps-comment__list li {
      border-color: var(--primary-color);
      background: #3A3F4F;
    }

    body.dark-mode .main-menu li a,
    body.dark-mode .nav-icon,
    body.dark-mode .ps-footer__content a {
      color: var(--dark-text);
    }

    body.dark-mode .nav-icon:hover {
      background: var(--primary-color);
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .main-menu {
        flex-direction: column;
        gap: 10px;
      }

      .navigation__column.right {
        gap: 5px;
      }

      .ps-author {
        flex-direction: column;
        align-items: flex-start;
      }

      .ps-blog-grid {
        padding: 30px 0;
      }
    }
  </style>
</head>
