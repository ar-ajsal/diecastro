  <main class="ps-main">
    <div class="ps-blog-grid pt-80 pb-80">
      <div class="container">
        <div class="row">
          <div class="col-lg-9 col-md-12">
            <div class="ps-post--detail">
              <div class="ps-post__thumbnail">
                <img src="<%= blog.image %>" alt="<%= blog.title %>">
              </div>
              <div class="ps-post__header">
                <h3 class="ps-post__title"><%= blog.title %></h3>
                <p class="ps-post__meta">
                  Posted by <a href="/blogs"><%= blog.author %></a> on <%= blog.date.toLocaleDateString() %> in
                  <% blog.categories.forEach((cat, index) => { %>
                    <a href="/blogs?category=<%= cat %>"><%= cat %></a><%= index < blog.categories.length - 1 ? ',' : '' %>
                  <% }) %>
                </p>
              </div>
              <div class="ps-post__content">
                <p><%= blog.content %></p>
              </div>
              <div class="ps-post__footer">
                <p class="ps-post__tags">
                  <i class="fa fa-tags"></i>
                  <% blog.tags.forEach((tag, index) => { %>
                    <a href="/blogs?tag=<%= tag %>"><%= tag %></a><%= index < blog.tags.length - 1 ? ',' : '' %>
                  <% }) %>
                </p>
                <div class="ps-post__actions">
                  <span><i class="fa fa-comments"></i> <%= blog.comments.length %> Comments</span>
                  <span>
                    <form action="/blogs/<%= blog._id %>/like" method="post" style="display:inline;">
                      <button type="submit" class="ps-btn ps-btn--sm">
                        <i class="fa fa-heart"></i> <%= blog.likes %> Likes
                      </button>
                    </form>
                  </span>
                  <div class="ps-post__social">
                    <i class="fa fa-share-alt"></i><a href="#">Share</a>
                    <ul>
                      <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                      <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                      <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
            <div class="ps-author">
              <div class="ps-author__thumbnail">
                <img src="<%= blog.authorBio.image %>" alt="<%= blog.authorBio.name %>">
              </div>
              <div class="ps-author__content">
                <header>
                  <h4><%= blog.authorBio.name %></h4>
                  <p><%= blog.authorBio.title %></p>
                </header>
                <p><%= blog.authorBio.description %></p>
              </div>
            </div>
            <div class="ps-comments">
              <h3>Comments (<%= blog.comments.length %>)</h3>
              <ul class="ps-comment__list">
                <% blog.comments.forEach(comment => { %>
                  <li class="ps-comment<%= comment.parentComment ? ' ps-comment--reply' : '' %>">
                    <div class="ps-comment__thumbnail">
                      <img src="/images/user/<%= comment._id.toString().slice(-1) || 2 %>.jpg" alt="<%= comment.name %>">
                    </div>
                    <div class="ps-comment__content">
                      <header>
                        <h4><%= comment.name %> <span>(<%= comment.createdAt.toLocaleString() %>)</span></h4>
                        <a href="#comment-form">Reply<i class="fa fa-reply"></i></a>
                      </header>
                      <p><%= comment.message %></p>
                    </div>
                  </li>
                <% }) %>
              </ul>
            </div>
            <form class="ps-form--comment" action="/blogs/<%= blog._id %>/comment" method="post" id="comment-form">
              <h3>Leave a Comment</h3>
              <div class="row">
                <div class="col-lg-6 col-md-6">
                  <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Your Name" required>
                  </div>
                </div>
                <div class="col-lg-6 col-md-6">
                  <div class="form-group">
                    <input class="form-control" type="email" name="email" placeholder="E-mail" required>
