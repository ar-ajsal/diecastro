    <style>

        :root {
            --primary-bg: #f5f5f5;
            --secondary-bg: #ffffff;
            --text-primary: #333333;
            --text-secondary: #666666;
            --border-color: #e0e0e0;
        }

        body {
            background-color: var(--primary-bg);
            color: var(--text-primary);
            font-family: 'Inter', sans-serif;
            margin: 0;
            overflow-x: hidden;
        }

        /* Horizontal Navigation */
        .navbar {
            background-color: var(--secondary-bg);
            border-bottom: 1px solid var(--border-color);
            padding: 1rem 2rem;
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .navbar-brand {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--text-primary);
        }

        .navbar a {
            color: var(--text-primary);
            text-decoration: none;
            padding: 0.5rem 1rem;
            font-size: 1rem;
            transition: background-color 0.2s ease;
        }

        .navbar a:hover,
        .navbar .active {
            background-color: var(--border-color);
            border-radius: 6px;
        }

        /* Main Content */
        .main-content {
            padding: 2rem;
            background: var(--secondary-bg);
            border-radius: 8px;
            margin: 1rem;
            border: 1px solid var(--border-color);
        }

        .main-content h1 {
            font-size: 1.75rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
        }

        /* Order Details Card */
        .order-details-card {
            background: var(--secondary-bg);
            border: 1px solid var(--border-color);
            border-radius: 8px;
            margin-bottom: 1.5rem;
        }

        .card-header {
            background: var(--secondary-bg);
            border-bottom: 1px solid var(--border-color);
            padding: 1rem;
        }

        /* Status Timeline */
        .status-timeline {
            display: flex;
            justify-content: space-between;
            margin: 1.5rem 1rem;
            position: relative;
            padding: 1rem 0;
        }

        .status-point {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .status-dot {
            width: 16px;
            height: 16px;
            border-radius: 50%;
            margin-bottom: 0.5rem;
            border: 2px solid var(--secondary-bg);
        }

        .status-line {
            position: absolute;
            top: 20px;
            left: 8px;
            right: 8px;
            height: 3px;
            background: var(--border-color);
            z-index: 0;
        }

        .status-active {
            background-color: #28a745;
        }

        .status-inactive {
            background-color: var(--border-color);
        }

        /* Address Card */
        .address-card {
            background: var(--primary-bg);
            border: 1px solid var(--border-color);
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 1rem;
        }

        /* Product Image */
        .product-image {
            width: 80px;
            height: 80px;
            object-fit: cover;
            border-radius: 6px;
            border: 1px solid var(--border-color);
            margin-right: 1rem;
        }

        /* Product Details Card */
        .product-details-card {
            background: var(--secondary-bg);
            border: 1px solid var(--border-color);
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
        }

        /* Buttons */
        .btn-primary {
            background: var(--text-primary);
            color: var(--secondary-bg);
            padding: 0.5rem 1rem;
            border: none;
            border-radius: 6px;
            font-weight: 600;
            transition: background-color 0.2s ease;
        }

        .btn-primary:hover {
            background: #555555;
        }

        .btn-outline-primary {
            background: var(--primary-bg);
            color: var(--text-primary);
            padding: 0.5rem 1rem;
            border: 1px solid var(--border-color);
            border-radius: 6px;
            font-weight: 600;
            transition: background-color 0.2s ease;
        }

        .btn-outline-primary:hover {
            background: var(--border-color);
        }

        .btn-danger {
            background: #dc3545;
            color: var(--secondary-bg);
            padding: 0.5rem 1rem;
            border: none;
            border-radius: 6px;
            font-weight: 600;
            transition: background-color 0.2s ease;
        }

        .btn-danger:hover {
            background: #c82333;
        }

        /* Breadcrumb */
        .breadcrumb-section {
            background: var(--secondary-bg);
            border-bottom: 1px solid var(--border-color);
            padding: 2rem 0;
        }

        .breadcrumb-text h1 {
            font-size: 1.75rem;
            font-weight: 600;
            color: var(--text-primary);
        }

        .breadcrumb-item a {
            color: var(--text-primary);
            text-decoration: none;
        }

        .breadcrumb-item a:hover {
            text-decoration: underline;
        }

        /* Badge */
        .badge {
            padding: 0.5rem 1rem;
            border-radius: 6px;
            font-weight: 600;
            font-size: 0.9rem;
        }

        /* Responsive Adjustments */
        @media (max-width: 768px) {
            .main-content {
                margin: 0.5rem;
                padding: 1.5rem;
            }

            .navbar {
                padding: 1rem;
            }

            .status-timeline {
                flex-direction: column;
                align-items: flex-start;
            }

            .status-point {
                flex-direction: row;
                gap: 0.5rem;
                margin-bottom: 0.5rem;
            }

            .status-line {
                display: none;
            }

            .product-details-card {
                flex-direction: column;
                align-items: flex-start;
                gap: 1rem;
            }

            .product-image {
                margin-bottom: 0.5rem;
            }
        }

        p {
            font-family: 'Inter', sans-serif;
            font-weight: 400;
            font-size: 0.9rem;
            line-height: 1.6;
            color: var(--text-secondary);
            margin: 0 0 0.5rem 0;
