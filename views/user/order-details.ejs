    <body>
        <!-- Breadcrumb Section -->
        <div class="breadcrumb-section">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 offset-lg-2 text-center">
                        <div class="breadcrumb-text">
                            <p>Track your purchase</p>
                            <h1>Order Details</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Horizontal Navigation -->
        <nav class="navbar">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Diecastro</a>
                <div class="d-flex flex-wrap">
                    <a href="/userProfile"><i class="fas fa-user"></i> Dashboard</a>
                    <a href="/orders" class="active"><i class="fas fa-history"></i> Order History</a>
                    <a href="/address"><i class="fas fa-map-marker-alt"></i> Address Book</a>
                    <a href="/editProfile"><i class="fas fa-cog"></i> Account Settings</a>
                    <a href="/wallet"><i class="fa-solid fa-wallet"></i> Wallet</a>
                    <a href="/coupons"><i class="fa-duotone fa-solid fa-ticket"></i> Coupons</a>
                    <a href="#" onclick="confirmAdminLogout(event)"><i class="fas fa-sign-out-alt"></i> Logout</a>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="main-content">
            <div class="container">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb bg-transparent">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item"><a href="/orders">Orders</a></li>
                        <li class="breadcrumb-item active">Order #<%= order.orderId %></li>
                    </ol>
                </nav>

                <div class="order-details-card">
                    <div class="card border-0">
                        <div class="card-header">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">Order #<%= order.orderId %></h5>
                                <span class="badge bg-light text-dark">
                                    <%= new Date(order.createdAt).toLocaleDateString() %>
                                </span>
                            </div>
                        </div>

                        <div class="card-body p-3">
                            <!-- Order Status Timeline -->
                            <% const statusRank = ['pending', 'confirmed', 'shipped', 'delivered']; %>
                            <% const currentIndex = statusRank.indexOf(order.status); %>
                            <div class="status-timeline">
                                <div class="status-line"></div>
                                <% statusRank.forEach((step, index) => { %>
                                    <div class="status-point">
                                        <div class="status-dot <%= index <= currentIndex ? 'status-active' : 'status-inactive' %>"></div>
                                        <small class="text-muted"><%= step.toUpperCase() %></small>
                                    </div>
                                <% }) %>
                            </div>

                            <!-- Product Details -->
                            <div class="row mb-3">
                                <div class="col-md-8">
                                    <h5 class="mb-3 font-weight-bold">Product Details</h5>
                                    <% order.orderedItems.forEach(item => { %>
                                        <div class="product-details-card">
                                            <% if (item.product && item.product.productImage && item.product.productImage.length > 0) { %>
                                                <img class="product-image" src="<%= item.product.productImage[0] %>" alt="Product Image">
                                            <% } else { %>
                                                <img class="product-image" src="/assets/img/placeholder.jpg" alt="No Image Available">
                                            <% } %>
                                            <div>
                                                <h6 class="mb-2"><%= item.product ? item.product.productName : 'Product Unavailable' %></h6>
                                                <p class="text-muted mb-1">Quantity: <%= item.quantity %></p>
                                                <p class="text-muted mb-1">Price: ₹<%= item.price %></p>
                                                <p class="mb-0">Status: 
                                                    <span class="badge <%= 
                                                        order.status === 'delivered' ? 'bg-success' :
                                                        order.status === 'cancelled' ? 'bg-danger' :
                                                        order.status === 'shipped' ? 'bg-info' :
                                                        order.status === 'return_requested' ? 'bg-warning' :
                                                        order.status === 'returned' ? 'bg-secondary' :
                                                        order.status === 'return_denied' ? 'bg-danger' :
                                                        'bg-warning'
                                                    %>">
                                                        <%= order.status.toUpperCase().replace('_', ' ') %>
                                                    </span>
                                                </p>
                                            </div>
                                        </div>
                                    <% }) %>
                                </div>

                                <div class="col-md-4">
                                    <!-- Order Summary -->
                                    <h5 class="mb-3 font-weight-bold">Order Summary</h5>
                                    <div class="card border-0">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between mb-2">
                                                <span>Subtotal:</span>
                                                <span>₹<%= order.totalPrice %></span>
                                            </div>
                                            <% if (order.discount > 0) { %>
                                                <div class="d-flex justify-content-between mb-2">
                                                    <span>Discount:</span>
                                                    <span class="text-success">-₹<%= order.discount %></span>
                                                </div>
                                            <% } %>
                                            <hr>
                                            <div class="d-flex justify-content-between fw-bold">
                                                <span>Total:</span>
                                                <span>₹<%= order.finalAmount %></span>
                                            </div>
                                        </div>
                                    </div>

                                    <% if (order.status === 'delivered') { %>
                                        <a href="/download-invoice?orderId=<%= order.orderId %>" class="btn btn-primary w-100 mt-3">Download Invoice</a>
                                    <% } %>

                                    <!-- Action Buttons Based on Order Status -->
                                    <% if (!['cancelled', 'delivered', 'returned', 'return_requested', 'return_denied'].includes(order.status)) { %>
                                        <button onclick="cancelOrder('<%= order._id %>')" class="btn btn-danger w-100 mt-3">Cancel Order</button>
                                    <% } %>

                                    <% if (order.status === 'delivered') { %>
                                        <button onclick="returnOrder('<%= order._id %>')" class="btn btn-outline-primary w-100 mt-3">Return Order</button>
                                    <% } else if (order.status === 'return_requested') { %>
                                        <div class="alert alert-info text-center mt-3">Return request is under review.</div>
                                    <% } else if (order.status === 'return_denied') { %>
                                        <div class="alert alert-danger text-center mt-3">Return request was denied.</div>
                                    <% } else if (order.status === 'returned') { %>
                                        <div class="alert alert-success text-center mt-3">Item has been returned.</div>
                                    <% } %>
                                </div>
                            </div>

                            <!-- Shipping Address -->
                            <% if (order && order.address && order.address.name) { %>
                                <h5 class="mb-3 font-weight-bold">Shipping Address</h5>
                                <div class="address-card">
                                    <p class="mb-2"><strong><%= order.address.name %></strong></p>
                                    <p class="mb-2 text-muted"><%= order.address.addressType || 'N/A' %></p>
                                    <p class="mb-2 text-muted"><%= order.address.landMark || 'N/A' %></p>
                                    <p class="mb-2 text-muted"><%= order.address.city %>, <%= order.address.state %> <%= order.address.pincode %></p>
                                    <p class="mb-2 text-muted">Phone: <%= order.address.phone %></p>
                                    <% if (order.address.altPhone) { %>
                                        <p class="mb-2 text-muted">Alternate Phone: <%= order.address.altPhone %></p>
                                    <% } %>
                                </div>
                            <% } else { %>
                                <h5 class="mb-3 font-weight-bold">Shipping Address</h5>
                                <div class="address-card">
                                    <p class="mb-2 text-muted">Address details unavailable.</p>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <%- include("../partials/user/footer") %>

        <!-- Scripts -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
             async function cancelOrder(orderId) {
                const { value: reason } = await Swal.fire({
                    title: 'Cancel Order',
                    input: 'textarea',
                    inputLabel: 'Please provide a reason for cancellation',
                    inputPlaceholder: 'Type your reason here...',
                    showCancelButton: true,
                    inputValidator: (value) => {
                        if (!value) {
                            return 'You need to provide a reason!';
                        }
                    }
                });

                if (reason) {
                    try {
                        const response = await fetch('/orders/cancel', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify({ orderId, reason }),
                        });

                        const data = await response.json();
                        
                        if (data.success) {
                            await Swal.fire({
                                icon: 'success',
                                title: 'Success',
                                text: 'Order cancelled successfully',
                                timer: 1500
                            });
                            location.reload();
                        } else {
                            throw new Error(data.message);
                        }
                    } catch (error) {
                        console.error('Error:', error);
                        await Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: error.message || 'Failed to cancel order'
                        });
                    }
                }
            }

            async function returnOrder(orderId) {
                const { value: reason } = await Swal.fire({
                    title: 'Return Order',
                    input: 'textarea',
                    inputLabel: 'Reason for returning',
                    inputPlaceholder: 'Type your reason here...',
                    showCancelButton: true,
                    inputValidator: (value) => !value && 'Please provide a reason!'
                });

                if (reason) {
                    try {
                        const response = await fetch(`/orders/return`, {
                            method: 'PATCH',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ reason, orderId })
                        });

                        const data = await response.json();
                        if (data.success) {
                            await Swal.fire({
                                icon: 'success',
                                title: 'Success',
                                text: 'Order return requested',
                                timer: 1500
                            });
                            location.reload();
                        } else {
                            throw new Error(data.message);
                        }
                    } catch (error) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: error.message || 'Failed to request return'
                        });
                    }
                }
            }

            function confirmAdminLogout(event) {
                event.preventDefault();
                Swal.fire({
                    title: "Are you sure?",
                    text: "You will be logged out!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, Logout"
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = "/logout";
                    }
                });
            }
        </script>
    </body>